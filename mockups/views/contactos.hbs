<header>
    <h2 id="user">{{name}}</h2>
    <div class="container">
        <h1>Video Llamada</h1>
        <ul class="nav nav-pills">
            <li role="presentation" class="active"><a href="/">Inicio</a></li>
            <li role="presentation"><a href="/register.html">Registro</a></li>
            <li role="presentation"><a href="/adminContacts">Adminstrar Contactos</a></li>
            <!-- <li role="presentation"><a href="#">Messages</a></li> -->
        </ul>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="list-group col-md-4">
            <a href="#" class="list-group-item active">
                Contactos
            </a>
            {{#each contacts}}
                <a href="/contactos/{{user}}" class="list-group-item">{{user}}</a>
            {{/each}}
        </div>
        <div class="col-md-5">
            <h2>{{scontact.name}}</h2>
            <h3>{{scontact.user}}</h3>
            <h3>Estado: online</h3>
            <div class="btn-group">
                <a href="/deleteContact/{{name}}/{{scontact.user}}" class="btn btn-danger">Eliminar</a>
                <a data-user="{{scontact.user}}" id="call" type="button" class="btn btn-success">Llamar</a>
                <a data-user="{{scontact.user}}" id="answer" type="button" class="btn btn-success">Responder</a>
                <a type="button" class="btn btn-danger" id="hang-up">Colgar</a>
                <!-- <button type="button" class="btn btn-danger">Eliminar</button> -->

            </div>
            <style>
                #yours {
                    width: 150px;
                    height: 150px;
                    position: absolute;
                    top: 15px;
                    right: 15px;
                }

                #theirs {
                    width: 500px;
                    height: 500px;
                }
            </style>
            <div id="call-page" class="page">
                <video id="yours" autoplay></video>
                <video id="theirs" autoplay></video>
                <!-- <input type="text" id="their-username" /> -->
                <!-- <button id="call">Call</button> -->
                <!-- <button id="hang-up">Hang Up</button> -->
                <!-- <button id="answer">Answer</button> -->
                <script>
                    $("#answer").hide();
                </script>
            </div>
            <script src="https://{{host}}:8080/client.js"></script>
            <script src="https://{{host}}:8080/stream.js"></script>
        </div>
    </div>
</div>
